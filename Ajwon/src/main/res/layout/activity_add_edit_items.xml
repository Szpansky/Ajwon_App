<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_items"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.apps.szpansky.ajwon_app.AddEdit.AddEditItemsActivity">

    <EditText
        android:id="@+id/name"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:ems="10"
        android:hint="Nazwa Przedmiotu"
        android:inputType="textPersonName"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/price"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/nr"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:ems="10"
        android:hint="Cena w zł (1.50)"
        android:inputType="number|numberSigned|numberDecimal"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold" />


    <Button
        android:id="@+id/add"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="Add" />


    <TextView
        android:id="@+id/simpleText"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/price"
        android:layout_marginTop="10dp"
        android:text="Wybierz Zniżki"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/nr"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/name"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:hint="Kod Przedmiotu"
        android:inputType="number"
        android:maxLength="5"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/check_5"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/simpleText"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:text="5%"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/check_10"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/check_5"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:text="10%"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/check_15"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/check_10"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:text="15%"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold" />


    <CheckBox
        android:id="@+id/check_20"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/simpleText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:text="20%"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/check_25"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/check_20"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:text="25%"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold" />


    <CheckBox
        android:id="@+id/check_30"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/check_25"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:text="30%"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold" />


    <CheckBox
        android:id="@+id/check_35"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/simpleText"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:text="35%"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/check_40"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/check_35"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:text="40%"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold" />


    <CheckBox
        android:id="@+id/check_100"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/check_40"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:text="100%"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold" />

</RelativeLayout>
