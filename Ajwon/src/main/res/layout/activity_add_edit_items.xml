<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_items"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.apps.szpansky.ajwon_app.add_edit.AddEditItemsActivity">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/item_title" />

    <EditText
        android:id="@+id/name"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView6"
        android:hint="@string/item_title"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/name"
        android:text="@string/code" />

    <EditText
        android:id="@+id/nr"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView8"
        android:hint="@string/code"
        android:inputType="number"
        android:maxLength="5"
        android:textAlignment="center"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/nr"
        android:text="@string/price" />

    <EditText
        android:id="@+id/price"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView21"
        android:hint="Cena w zł (1.50)"
        android:inputType="number|numberSigned|numberDecimal"
        android:textAlignment="center"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/simpleText"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/price"
        android:layout_marginTop="10dp"
        android:text="Wybierz Zniżki"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold" />


    <CheckBox
        android:id="@+id/check_5"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/simpleText"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:text="5%"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/check_10"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/check_5"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:text="10%"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/check_15"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/check_10"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:text="15%"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold" />


    <CheckBox
        android:id="@+id/check_20"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/simpleText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:text="20%"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/check_25"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/check_20"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:text="25%"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold" />


    <CheckBox
        android:id="@+id/check_30"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/check_25"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:text="30%"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold" />


    <CheckBox
        android:id="@+id/check_35"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/simpleText"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:text="35%"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/check_40"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/check_35"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:text="40%"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold" />


    <CheckBox
        android:id="@+id/check_100"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/check_40"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:text="100%"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="@dimen/default_margin"
        android:layout_marginEnd="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        android:clickable="true"
        app:fabSize="normal"
        app:srcCompat="@mipmap/ic_add_white_24dp" />

</RelativeLayout>
