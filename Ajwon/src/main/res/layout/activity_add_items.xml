<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_items"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.apps.szpansky.ajwon_app.AddItemsActivity">

    <EditText
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold"
        android:ems="10"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:inputType="textPersonName"
        android:hint="Item Name"
        android:id="@+id/text_name"
        />

    <EditText
        android:textColor="@android:color/holo_blue_dark"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="number"
        android:hint="Item Nr"
        android:layout_below="@+id/text_name"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:id="@+id/text_nr"
        />

    <EditText
        android:textColor="@android:color/holo_blue_dark"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="number|numberSigned|numberDecimal"
        android:layout_below="@+id/text_nr"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:hint="Price in zl (1,50)"
        android:id="@+id/text_price"
        />

    <CheckBox
        android:textColor="@android:color/holo_blue_dark"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:textStyle="bold"
        android:text="10% Discount"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/text_price"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="18dp"
        android:id="@+id/check_10"
        />

    <CheckBox
        android:textColor="@android:color/holo_blue_dark"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:textStyle="bold"
        android:text="20% Discount"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/check_10"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="18dp"
        android:id="@+id/check_20"
        />

    <CheckBox
        android:textColor="@android:color/holo_blue_dark"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:textStyle="bold"
        android:text="25% Discount"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/check_20"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="18dp"
        android:id="@+id/check_25"
        />

    <Button
        android:text="Add"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/button_add"
        />


</RelativeLayout>
