<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/default_padding">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Obecny Katalog:"
        android:textSize="@dimen/default_text_size"
        android:textStyle="bold|italic" />

    <GridLayout
        android:id="@+id/grid_current"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:horizontalSpacing="10dp"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:verticalSpacing="10dp">

        <TextView
            android:layout_column="0"
            android:layout_gravity="left"
            android:layout_row="0"
            android:text="Numer Katalogu"
            android:textAllCaps="false"
            android:textSize="@dimen/default_text_size" />

        <TextView
            android:layout_column="0"
            android:layout_gravity="left"
            android:layout_row="1"
            android:text="Ilość Klientów"
            android:textSize="@dimen/default_text_size" />

        <TextView
            android:layout_column="0"
            android:layout_gravity="left"
            android:layout_row="2"
            android:text="Ilość Zamówionych"
            android:textSize="@dimen/default_text_size" />


        <TextView
            android:layout_column="0"
            android:layout_gravity="left"
            android:layout_row="3"
            android:text="Nie Zapłacone"
            android:textSize="@dimen/default_text_size" />

        <TextView
            android:layout_column="0"
            android:layout_gravity="left"
            android:layout_row="4"
            android:text="Zapłacone"
            android:textSize="@dimen/default_text_size" />

        <TextView
            android:layout_column="0"
            android:layout_gravity="left"
            android:layout_row="5"
            android:text="Dostarczone"
            android:textSize="@dimen/default_text_size" />

        <TextView
            android:layout_column="0"
            android:layout_gravity="left"
            android:layout_row="6"
            android:text="Suma"
            android:textSize="@dimen/default_text_size" />

        <TextView
            android:id="@+id/current_catalogs_number"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_row="0"
            android:text="@string/error"
            android:textSize="@dimen/default_text_size" />

        <TextView
            android:id="@+id/current_clients_amount"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_row="1"
            android:text="@string/error"
            android:textSize="@dimen/default_text_size" />

        <TextView
            android:id="@+id/current_ordered_item_amount"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_row="2"
            android:text="@string/error"
            android:textSize="@dimen/default_text_size" />

        <TextView
            android:id="@+id/current_not_payed_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_row="3"
            android:text="@string/error"
            android:textSize="@dimen/default_text_size" />

        <TextView
            android:id="@+id/current_payed_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_row="4"
            android:text="@string/error"
            android:textSize="@dimen/default_text_size" />

        <TextView
            android:id="@+id/current_ready_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_row="5"
            android:text="@string/error"
            android:textSize="@dimen/default_text_size" />

        <TextView
            android:id="@+id/current_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_row="6"
            android:text="@string/error"
            android:textSize="@dimen/default_text_size" />

    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/default_margin"
        android:text="Ogólnie:"
        android:textSize="@dimen/default_text_size"
        android:textStyle="bold|italic" />

    <GridLayout
        android:id="@+id/grid_general"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:layout_column="0"
            android:layout_gravity="left"
            android:layout_row="0"
            android:text="Ilość Katalogów"
            android:textSize="@dimen/default_text_size" />

        <TextView
            android:layout_column="0"
            android:layout_gravity="left"
            android:layout_row="1"
            android:text="Ilość Klientów"
            android:textSize="@dimen/default_text_size" />

        <TextView
            android:layout_column="0"
            android:layout_gravity="left"
            android:layout_row="2"
            android:text="Ilość Przedmiotów"
            android:textSize="@dimen/default_text_size" />


        <TextView
            android:layout_column="0"
            android:layout_gravity="left"
            android:layout_row="3"
            android:text="Ilość Kontaktów"
            android:textSize="@dimen/default_text_size" />

        <TextView
            android:id="@+id/all_catalogs_amount"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_row="0"
            android:text="@string/error"
            android:textSize="@dimen/default_text_size" />

        <TextView
            android:id="@+id/all_clients_amount"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_row="1"
            android:text="@string/error"
            android:textSize="@dimen/default_text_size" />

        <TextView
            android:id="@+id/all_items_amount"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_row="2"
            android:text="@string/error"
            android:textSize="@dimen/default_text_size" />

        <TextView
            android:id="@+id/all_persons_amount"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_row="3"
            android:text="@string/error"
            android:textSize="@dimen/default_text_size" />


    </GridLayout>

    <Button
        android:id="@+id/dialog_info_backBtn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin"
        android:fontFamily="casual"
        android:text="Powrót" />


</LinearLayout>